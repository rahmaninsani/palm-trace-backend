// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  DINAS
  PETANI
  KOPERASI
  PABRIK_KELAPA_SAWIT
}

model Akun {
  id        Bytes    @id @default(dbgenerated("(UUID_TO_BIN(UUID(), 1))")) @db.Binary(16)
  email     String   @unique @db.VarChar(200)
  password  String   @db.VarChar(200)
  role      Role
  wallet    String?  @db.Text()
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  koperasi          Koperasi?
  petani            Petani?
  pabrikKelapaSawit PabrikKelapaSawit?
  dinas             Dinas?

  @@map("akun")
}

model Koperasi {
  id            Bytes    @id @default(dbgenerated("(UUID_TO_BIN(UUID(), 1))")) @db.Binary(16)
  idAkun        Bytes    @unique @map("id_akun") @db.Binary(16)
  siup          String?  @unique @db.Char(50)
  nama          String   @db.VarChar(200)
  alamat        String   @db.Text()
  nomorTelepon  String   @map("nomor_telepon") @db.VarChar(20)
  nomorRekening String?  @map("nomor_rekening") @db.VarChar(20)
  namaBank      String?  @map("nama_bank") @db.VarChar(200)
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")

  akun   Akun     @relation(fields: [idAkun], references: [id])
  petani Petani[]

  @@map("koperasi")
}

model Petani {
  id            Bytes    @id @default(dbgenerated("(UUID_TO_BIN(UUID(), 1))")) @db.Binary(16)
  idAkun        Bytes    @unique @map("id_akun") @db.Binary(16)
  idKoperasi    Bytes    @map("id_koperasi") @db.Binary(16)
  nik           String?  @unique @db.Char(16)
  nama          String   @db.VarChar(200)
  alamat        String   @db.Text()
  nomorTelepon  String   @map("nomor_telepon") @db.VarChar(20)
  nomorRekening String?  @map("nomor_rekening") @db.VarChar(20)
  namaBank      String?  @map("nama_bank") @db.VarChar(200)
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")

  akun     Akun     @relation(fields: [idAkun], references: [id])
  koperasi Koperasi @relation(fields: [idKoperasi], references: [id])

  @@map("petani")
}

model PabrikKelapaSawit {
  id            Bytes    @id @default(dbgenerated("(UUID_TO_BIN(UUID(), 1))")) @db.Binary(16)
  idAkun        Bytes    @unique @map("id_akun") @db.Binary(16)
  siup          String?  @unique @db.Char(50)
  nama          String   @db.VarChar(200)
  alamat        String   @db.Text()
  nomorTelepon  String   @map("nomor_telepon") @db.VarChar(20)
  nomorRekening String?  @map("nomor_rekening") @db.VarChar(20)
  namaBank      String?  @map("nama_bank") @db.VarChar(200)
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")

  akun Akun @relation(fields: [idAkun], references: [id])

  @@map("pabrik_kelapa_sawit")
}

model Dinas {
  id           Bytes    @id @default(dbgenerated("(UUID_TO_BIN(UUID(), 1))")) @db.Binary(16)
  idAkun       Bytes    @unique @map("id_akun") @db.Binary(16)
  nama         String   @db.VarChar(200)
  alamat       String   @db.Text()
  nomorTelepon String   @map("nomor_telepon") @db.VarChar(20)
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  akun Akun @relation(fields: [idAkun], references: [id])

  @@map("dinas")
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String   @db.Text()
  expiresAt DateTime @map("expires_at")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("session")
}
